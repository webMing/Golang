{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "AddGoPath",
            "type": "shell",
            "command": "AddGoPath.sh",
            "args": [
                "${file}"
            ],
            /*
            "group": {
                "kind": "test",
                "isDefault": true
            }, */
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                // 添加环境变量
                "env": {
                    //"GOPATH":"/Users/stephanie/go:${workspaceFolder}"
                    "GOPATH":"ls $(go env GOPATH)"
                }
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}